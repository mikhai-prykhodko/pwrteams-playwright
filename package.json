{
  "name": "pwrteams-test-task",
  "version": "1.0.0",
  "description": "Test task for pwrteams",
  "main": "./build",
  "scripts": {
    "test": "npx playwright test -c playwright.config.ts --project=\"chromium\"",
    "test:ui": "playwright test --ui -c playwright.config.ts --project=\"chromium\"",
    "test:headed": "playwright test --headed -c playwright.config.ts --project=\"chromium\"",
    "test:debug": "playwright test --debug  -c playwright.config.ts --project=\"chromium\"",
    "test:report": "playwright show-report",
    "lint": "npx eslint --max-warnings=0",
    "nuke": "npx rimraf node_modules",
    "rebuild": "yarn nuke && yarn cache clean && yarn && yarn lint",
    "build": "yarn && tsc",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|json)\""
  },
  "keywords": [],
  "author": "Mikhail Prykhodko",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "eslint": "^9.8.0",
    "eslint-formatter-compact": "^9.0.1",
    "prettier": "^3.4.2"
  },
  "dependencies": {
    "@faker-js/faker": "^10.2.0",
    "dotenv": "^17.2.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.5.0",
    "eslint-plugin-prettier": "^5.5.5",
    "moment": "^2.30.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "engines": {
    "node": ">= 18.0.0"
  }
}
